                <h4>{{englishCtrl.correction}}</h4>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6">
                <h4>{{englishCtrl.worldToTrans}}</h4>
              </div>
              <div class="input-field col s6">
                <input type="text" id="answer" ng-model="englishCtrl.answer" required/>
