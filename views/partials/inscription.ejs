<div class="page noBackground" id="inscription" ng-hide="pageCtrl.connected()" ng-controller="InscriptionCtrl as inscriptionCtrl">
  <div class="container">
    <h3>Inscription</h3>
    <div class="divider"></div>
    <form name="Inscription" ng-submit="inscriptionCtrl.getInscription()" novalidate>
      <label class="form_col" for="homme" style="float:left">Sexe :</label><br>
			<p><input name="sexe" type="radio" value="homme" id="homme" ng-model="inscriptionCtrl.inscription.sexe"/><label for="homme">Homme</label></p>
			<p><input name="sexe" type="radio" value="femme" id="femme" ng-model="inscriptionCtrl.inscription.sexe"/><label for="femme">Femme</label></p>
      <div class="input-field">
        <input id="lastname" name="lastname" type="text" ng-model="inscriptionCtrl.inscription.lastname" required/>
        <label for="lastname">Nom</label>
      </div>
      <div class="input-field">
        <input id="firstname" name="firstname" type="text" ng-model="inscriptionCtrl.inscription.firstname" required/>
        <label for="firstname">Pr√©nom</label>
      </div>
      <div class="input-field">
        <input  name="mailadress" type="email" ng-model="inscriptionCtrl.inscription.mailadress" required/>
        <label for="mailadress">Adresse mail</label>
      </div>
      <div class="input-field">
        <label for="birthdate">Date de naissance</label>
        <input type="text" id="birthdate" class="datepicker" ng-model="inscriptionCtrl.inscription.birthdate" required/>
      </div>
      <div class="input-field">
        <input id="password" type="password" ng-minlength="6" ng-model="inscriptionCtrl.inscription.password" required/>
        <label for="password">Mot de passe</label>
      </div>
      <div class="input-field">
        <input id="passwordbis" name="passwordbis" type="password" ng-minlength="6" ng-model="inscriptionCtrl.inscription.passwordbis" required/>
        <label for="passwordbis">Mot de passe</label>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Inscription
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>
</div>
