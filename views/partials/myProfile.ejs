<div class="page noBackground" id="myProfile" ng-show="pageCtrl.connected()" ng-controller="MyProfileCtrl as myProfileCtrl">
  <div class="container" ng-repeat="user in myProfileCtrl.getUser()">
    <h3>Mon Compte</h3>
    <div class="divider"></div>
    <div class="row">
      <div class="col s4">
        <h5>Nom</h5>
        <p>{{user.lastname}}</p>
      </div>
      <div class="col s4">
        <h5>Pr√©nom</h5>
        <p>{{user.firstname}}</p>
      </div>
      <div class="col s4">
        <h5>Date de naissance</h5>
        <p>{{user.birthdate | date}}</p>
      </div>
      <div class="col s12">
        <div class="divider"></div>
      </div>
      <div class="col s6">
        <h5>Adresse mail</h5>
        <p>{{user.mailadress}}</p>
      </div>
      <div class="col s6">
        <form ng-submit="EditPassword.$valid && myProfileCtrl.editpassword.newpassword == myProfileCtrl.editpassword.newpasswordbis && myProfileCtrl.editPassword()" name="EditPassword" novalidate>
          <div class="input-field">
            <input id="actualpassword" type="password" ng-model="myProfileCtrl.editpassword.actualpassword" required/>
            <label for="actualpassword">Mot de passe actuel</label>
          </div>
          <div class="input-field">
            <input id="newpassword" type="password" ng-model="myProfileCtrl.editpassword.newpassword" required/>
            <label for="newpassword">Nouveau mot de passe</label>
          </div>
          <div class="input-field">
            <input id="newpasswordbis" type="password" ng-model="myProfileCtrl.editpassword.newpasswordbis" required/>
            <label for="newpasswordbis">Nouveau mot de passe</label>
          </div>
          <button class="btn waves-effect waves-light" type="submit" name="action">Modifier le mot de passe
            <i class="material-icons right">mode_edit</i>
          </button>
        </form>
      </div>
    </div>

  </div>
</div>
