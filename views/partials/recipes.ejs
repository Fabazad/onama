<div class="page noBackground" id="recipes" ng-controller="RecipesCtrl as recipesCtrl">
  <div class="container">
    <h3>Recettes</h3>
    <div class="row">

      <ul class="collapsible popout" data-collapsible="accordion">
       <li ng-repeat="recipe in recipesCtrl.recipes">
