<div class="page noBackground" id="myfood" ng-controller="MyFoodCtrl as myFoodCtrl" ng-show="pageCtrl.connected()">
  <div class="container">

    <div id="modal1" class="modal">
      <form name="Modal" ng-submit="Modal.$valid " novalidate>
        <div class="modal-content">
          <h4>{{myFoodCtrl.modal.title_food}}</h4>
          <input id="inputModal" type="number" min=0 step=1 max={{myFoodCtrl.modal.max}} ng-model="myFoodCtrl.modal.inputValue" required/><span>g</span>
        </div>
        <div class="modal-footer">
          <input type="submit" onclick="$('#inputModal').val('')" ng-click="myFoodCtrl.updateQuantityFood(myFoodCtrl.modal.id_food, myFoodCtrl.modal.action, myFoodCtrl.modal.inputValue)" class="modal-action modal-close waves-effect waves-green btn-flat" value="{{myFoodCtrl.modal.action}}"/>
          <a href="" onclick="$('#inputModal').val('')" class="modal-action modal-close waves-effect waves-green btn-flat">Fermer</a>
        </div>
      </form>
    </div>

    <h3>Mes aliments</h3>

    <form name="myFoodAction" novalidate>
      <div class="row">
        <div class="input-field col s12">
          <input ng-change="myFoodCtrl.existingFood()" type="text" id="autocompleteMyFood" ng-model="myFoodCtrl.myFoodAutocomplete" class="autocomplete autocomplete2" required>
          <label for="autocompleteMyFood">Aliment</label>
        </div>
      </div>
      <div class="row" ng-show="myFoodCtrl.idFood">
          <div class="input-field col s6">
            <input id="quantityMyFood" type="number" min=0 step="1" ng-model="myFoodCtrl.quantity" required/>
            <label for="input_text">Quantit√© (g)</label>
          </div>
          <div class="input-field col s3">
            <a class="green btn tooltipped" ng-click="myFoodAction.$valid && myFoodCtrl.updateQuantityFood(myFoodCtrl.idFood,'Ajouter',myFoodCtrl.quantity, myFoodCtrl.myFoodAutocomplete)" data-position="bottom" data-delay="50" data-tooltip="Ajouter"><i class="material-icons">add</i></a>
          </div>
          <div class="input-field col s3">
            <a class="orange btn tooltipped" ng-click="myFoodAction.$valid && myFoodCtrl.updateQuantityFood(myFoodCtrl.idFood,'Enlever',myFoodCtrl.quantity)" data-position="bottom" data-delay="50" data-tooltip="Enlever"><span class="minus">-</span></a>
          </div>
          <div class="input-field col s3">
            <a class="yellow btn tooltipped" ng-click="myFoodAction.$valid && myFoodCtrl.updateQuantityFood(myFoodCtrl.idFood,'Initialiser',myFoodCtrl.quantity, myFoodCtrl.myFoodAutocomplete)" data-position="bottom" data-delay="50" data-tooltip="Nouvelle valeur"><i class="material-icons">settings_backup_restore</i></a>
          </div>
          <div class="input-field col s3">
            <a class="red btn tooltipped" ng-click="myFoodCtrl.updateQuantityFood(myFoodCtrl.idFood,'Delete',0)" data-position="bottom" data-delay="50" data-tooltip="Supprimer"><i class="material-icons">delete</i></a>
          </div>
      </div>
    </form>

    <div class="row">
      <div class="input-field col s12">
        <table class="bordered">
          <thead>
            <tr>
              <th>Aliment</th>
              <th>Quantite</th>
              <th style="text-align: center;">Action</th>
            </tr>
          </thead>

          <tbody>
            <tr ng-repeat="food in myFoodCtrl.userFood()" ng-show="food.quantity_getfood">
              <td>{{food.title_food}}</td>
              <td>{{food.quantity_getfood}} g</td>
              <td>
                <div class="fixed-action-btn horizontal">
                  <a class="btn-floating btn-large">
                    <i class="large material-icons">mode_edit</i>
                  </a>
                  <ul>
                    <li><a ng-click="myFoodCtrl.setModalAdd(food.id_food)" href="#modal1" class="btn-floating green btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Ajouter"><i class="material-icons">add</i></a></li>
                    <li><a ng-click="myFoodCtrl.setModalSub(food.id_food)" href="#modal1" class="btn-floating orange btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Enlever"><span class="minus">-</span></a></li>
                    <li><a ng-click="myFoodCtrl.setModalNew(food.id_food)" href="#modal1" class="btn-floating yellow btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Nouvelle valeur"><i class="material-icons">settings_backup_restore</i></a></li>
                    <li><a ng-click="myFoodCtrl.updateQuantityFood(food.id_food,'Delete',0)" class="btn-floating red btn" ><i class="material-icons">delete</i></a></li>
                  </ul>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
