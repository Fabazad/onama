
<div id="modalLostPassword" class="modal">
  <form name="LostPassword" ng-submit="LostPassword.$valid " novalidate>
    <div class="modal-content">
      <div class="row">
        <div class="input-field col s12">
          <input type="email" placeholder="Votre adresse mail" id='mailLostPassword' ng-model="userCtrl.mailLostPassword" required/>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <input type="submit" ng-click="userCtrl.newPassword(userCtrl.mailLostPassword)" class="modal-action modal-close waves-effect waves-green btn-flat" value="Recevoir un nouveau mot de passe" required/>
      <a onclick="$('#mailLostPassword').val('')" class="modal-action modal-close waves-effect waves-green btn-flat">Fermer</a>
    </div>
  </form>
</div>

<div class="page parallax-container" id="connection" ng-hide="userCtrl.connected()">
  <div class="container onBackground">



    <h3>Connexion</h3>
    <form ng-submit="Connection.$valid && userCtrl.getConnection()" name="Connection" novalidate>
      <input type="email" placeholder="Adresse Mail" ng-model="userCtrl.connection.mailadress" required/>
      <input type="password" placeholder=" Mot de Passe" ng-model="userCtrl.connection.password" required/>
      <input type="checkbox" id="stayconnected" ng-model="userCtrl.connection.stayconnected"/><label style="float:left" for="stayconnected">Rester connecté </label>
      <a style="float:right" href="#modalLostPassword" >Mot de pass oublié ?</a><br>
      <button class="btn waves-effect waves-light" type="submit" name="action">Connexion
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>
</div>
