
<div id="modalLostPassword" class="modal" ng-controller="ConnectionCtrl as connectionCtrl">
  <form name="LostPassword" ng-submit="LostPassword.$valid " novalidate>
    <div class="modal-content">
      <div class="row">
        <div class="input-field col s12">
          <input type="email" id='mailLostPassword' ng-model="connectionCtrl.mailLostPassword" required/>
          <label for="mailLostPassword">Votre adresse mail</label>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <input type="submit" ng-click="connectionCtrl.newPassword(connectionCtrl.mailLostPassword)" class="modal-action modal-close waves-effect waves-green btn-flat" value="Recevoir un nouveau mot de passe" required/>
      <a onclick="$('#mailLostPassword').val('')" class="modal-action modal-close waves-effect waves-green btn-flat">Fermer</a>
    </div>
  </form>
</div>

<div class="page" id="connection" ng-hide="pageCtrl.connected()"  ng-controller="ConnectionCtrl as connectionCtrl">
  <div class="container onBackground">



    <h3>Connexion</h3>
    <form ng-submit="Connection.$valid && connectionCtrl.getConnection()" name="Connection" novalidate>
      <div class="input-field s12">
        <input type="email" id="mailadressconnection" ng-model="connectionCtrl.connection.mailadress" required/>
        <label for="mailadressconnection">Adresse mail</label>
      </div>
      <div class="input-field s12">
        <input type="password" id="passwordconnection" ng-model="connectionCtrl.connection.password" required/>
        <label for="passwordconnection">Mot de passe</label>
      </div>
      <input type="checkbox" id="stayconnected" ng-model="connectionCtrl.connection.stayconnected"/><label style="float:left" for="stayconnected">Rester connecté </label>
      <a style="float:right" href="#modalLostPassword" >Mot de pass oublié ?</a><br>
      <button class="btn waves-effect waves-light" type="submit" name="action">Connexion
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>
</div>
